<!DOCTYPE html>
<html>
<head>
	<title>Customer</title>
</head>
<body>
	<form method="post">
        <table align="center" border="1 px solid black" width="50%">
            <tr>
                <td colspan="4">
                    <h2>Your Cart List</h2>
                </td>
            </tr>
            <tr>
                <td>
                    Serial
                </td>
                <td>
                    Name
                </td>
                <td>
                    Price
                </td>
                <td>
                    Buy Now
                </td>
            </tr>
            <% for(var i=0; i < cartlist.length; i++){ %>
		 		
                    <tr>
                        <td>
                            <%=(i+1) %>
                        </td>
                        <td>
                            <%= cartlist[i].name %>
                        </td>
                        <td>
                            <%= cartlist[i].price %>
                        </td>
                        <td>
                            <input type="button" onclick="location.href='/customer/buy/<%= cartlist[i].id%>'" value="Buy"> |   
                            <input type="button" onclick="location.href='/customer/remove/<%= cartlist[i].id%>'" value="Remove">
                        </td>
					</tr>
                    <%} %>
        </table>
        <br/><br/>
        <div align="center">
            <input type="button" onclick="location.href='/customer'" value="Back">
        </div>
    </form>

</body>
</html>